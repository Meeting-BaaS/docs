{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "types": ["react", "node"],
    "paths": {
      "@/*": ["../*"]
    }
  },
  "include": [
    "../scripts/**/*.mts",
    "../node_modules/.pnpm/@types+react@*/node_modules/@types/react/index.d.ts"
  ],
  "ts-node": {
    "esm": true
  }
}
